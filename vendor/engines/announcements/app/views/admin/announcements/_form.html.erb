<%= form_for [:admin, @announcement] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @announcement,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :league -%>
    <%= f.text_field :league, :class => 'larger widest'  -%>
  </div>
  
  <div class='field'>
    <%= f.label :teamname -%>
    <%= collection_select(:announcement, :teamname, 
		Team.all, :name, :name) %>
  </div>
  
  <div class='field'>
    <%= f.label :hometeam -%>
    <%= f.text_field :hometeam  -%>
  </div>
  
  <div class='field'>
    <%= f.label :awayteam -%>
    <%= f.text_field :awayteam  -%>
  </div>
  
  <div class='field'>
    <%= f.label :goalshome -%>
    <%= f.text_field :goalshome  -%>
  </div>
  
  <div class='field'>
    <%= f.label :goalsaway -%>
    <%= f.text_field :goalsaway  -%>
  </div>
  
  <div class='field'>
    <%= f.label :scorerhome -%>
    <%= f.text_field :scorerhome  -%>
  </div>
  
  <div class='field'>
    <%= f.label :scoreraway -%>
    <%= f.text_field :scoreraway  -%>
  </div>
  
  <div class='field'>
    <%= f.label :date -%>
    <%= f.datetime_select :date  -%>
  </div>
  
  <div class='field'>
    <%= f.label :location -%>
    <%= f.text_field :location  -%>
  </div>
  
  <div class='field'>
    <%= f.label :squad -%>
    <%= f.text_field :squad  -%>
  </div>
  
  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:other].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to part.to_s.titleize, "##{part}" %>
          </li>
        <% end %>
      </ul>

      <div id='page_part_editors'>
        <% [:other].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.announcements.announcement'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @announcement.league)
              } %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
