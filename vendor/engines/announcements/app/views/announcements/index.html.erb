<% content_for :body_content_left do %>
  <ul id="announcements">
	<% @teams.each do |team| %>
	<h1><%= team.name %></h1>
    <% @announcements.each do |announcement| %>
      
		<% if announcement.teamname ==   team.name %>
      	<li>
        <%= link_to announcement.date.to_s(:short) + " " + announcement.teamname + ":  " + announcement.hometeam +  " - " + announcement.awayteam + " (" + announcement.goalshome.to_s + ":" + announcement.goalsaway.to_s  + ")", announcement_path(announcement) %>
		</li>
    	<% end %>
    <% end %>
  <% end %>
<% end %>



<%= render :partial => "/shared/content_page" %>
