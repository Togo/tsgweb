<section id="body_content" class="engine_index">  
		<% @teams.each do |team| %>
			<div id="engine_index_list_container">
			<div id="img"><%= image_fu team.photo, :medium %></div>
   			<div id="liste">
				<ul>
					<li class="heading"><%= link_to team.name, team_path(team) %></li>
					 <li><b>Liga: </b><%=raw team.league %><br /></li>
				    <li><b>Training: </b><%=raw team.training %><br /></li>
					 <li><b>Email: </b><%= mail_to team.email, team.email %><br /></li>
				    <li><b>Fussball.de: </b><%= link_to "Fussball.de", team.fussballde %><br /></li>
					<li><%= link_to ">>> Link zur Mannschaftseite <<<", team_path(team) %></li>
				</ul>
			</div>
		</div>
    <% end %>

</section>

