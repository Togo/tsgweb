<section id="body_content">
<div id="body_content_left_engines_show">
	
	 <h1> <%= @team.name %>(<%=raw @team.league %>)</h1>
	
	<section class="photo">
      <%= image_fu @team.photo, :large %>
  </section>

 <section class="data">
  <ul>
    <li><b>Liga: </b><%= raw @team.league %><br /></li>
	  <li><b>Trainer: </b><%= link_to @coach.name, coach_path(@team.coach_id) %><br /></li>
	  <li><b>Trainer: </b><%= link_to @co_coach.name, coach_path(@team.co_coach_id) %><br /></li>
    <li><b>Spielleiter: </b><%= link_to @employee.name, employee_path(@admin_id) %><br /></li>
    <li><b>Training: </b><%=raw @team.training %><br /></li>
	  <li><b>Email: </b><%= mail_to @team.email, @team.email %><br /></li>
    <li><b>Fussball.de: </b><%= link_to "Fussball.de", @team.fussballde %><br /></li>
</ul>
</section>

<ul id="teams_announcement_table">
	<h2><%= @team.name %> Spielplan Saison 2011/12</h2>
	 <% @announcements.each do |announcement| %>
		<% if announcement.teamname ==   @team.name %>
		
		<div id="table">
			<table>
			<tr><td class="left" width="100px"><%= announcement.date.to_s(:short) %> </td><td class="center" width="280px"><%=  announcement.hometeam  %> - <%= announcement.awayteam %></td><td class="center" width="50px"><%= announcement.goalshome.to_s %> : <%= announcement.goalsaway.to_s %></td><td class="right"><%= link_to "Kader/Spielbericht", announcement_path(announcement.id) %></td></tr>

			</table>
		</div>
		<% end %>
	<% end %>
 	
	
</div>

<div id="body_content_right_engines_show">
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="teams">
      <% @teams.each do |team| %>
        <li>
          <%= link_to team.name, team_path(team) %>
        </li>
      <% end %>
    </ul>
  </aside>
</div>
</section>

