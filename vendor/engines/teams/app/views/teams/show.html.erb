
<div id="body_content_left_team">
	
	 <h1> <%= @team.name %>(<%=raw @team.league %>)</h1>
	
	<section class="photo">
    <p>
      <%= image_fu @team.photo, geometry="400x200" %>
    </p>
  </section>

 <section class="data">
  <ul>
    <li><b>Name: </b><p><%=raw @team.name %></p><br /></li>
    <li><b>Liga: </b<p><%=raw @team.league %></p><br /></li>
	  <li><b>Trainer: </b><p><%= link_to @coach.name, coach_path(@coach_id) %></p><br /></li>
    <li><b>Spielleiter: </b><p><%=raw @team.admin_id %></p><br /></li>
    <li><b>Training: </b><p><%=raw @team.training %></p><br /></li>
	  <li><b>Email: </b><p><%= mail_to @team.email, @team.email %></p><br /></li>
    <li><b>Fussball.de: </b><p><%= link_to "Fussball.de", @team.fussballde %></p><br /></li>
</ul>
</section>
</div>

<div id="body_content_right_team">
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="teams">
      <% @teams.each do |team| %>
        <li>
          <%= link_to team.name, team_path(team) %>
        </li>
      <% end %>
    </ul>
  </aside>
</div>


