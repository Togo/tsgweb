<section id="body_content">
<div id="body_content_left_engines_show">
	 <h1> <%= @coach.name %> </h1>
	<section class="photo">
      <%= image_fu @coach.photo, :large %>
  </section>

 <section class="data">
  <ul>
    <li><b>Name: </b><%=raw @coach.name %><br /></li>
    <li><b>Funktion: </b><%=raw @coach.function %><br /></li>
    <li><b>Telefon: </b><%=raw @coach.phone %><br /></li>
	  <li><b>Email: </b><%= mail_to @coach.email, @coach.email %><br /></li>
	  <li><b>Since:</b><li><%=raw @coach.since %><br /></li> 
</ul>
</section>
</div>

<div id="body_content_right_engines_show">
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="teams">
      <% @coaches.each do |coach| %>
        <li>
          <%= link_to coach.name, coach_path(coach) %>
        </li>
      <% end %>
    </ul>
  </aside>
</div>
</section>


