<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(employee) -%>">
  <span class='title'>
    <%= employee.name %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), employee_path(employee),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_employee_path(employee),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_employee_path(employee),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => employee.name),
        :method => :delete %>
  </span>
</li>
