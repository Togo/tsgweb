<% content_for :body_content_title do %>

<% end %>
<div id="body_content_left_employee">
	
	 <h1>   <%= @employee.name %></h1>
	
	<section class="photo">
    <p>
      <%= image_fu @employee.photo, geometry="200x200" %>
    </p>
  </section>

 <section class="data">
  <ul>
    <li><b>Name: </b><p><%=raw @employee.name %></p><br /></li>
    <li><b>Funktion: </b<p><%=raw @employee.function %></p><br /></li>
	  <li><b>Telefon: </b><p><%=raw @employee.phone %></p><br /></li>
	  <li><b>Email: </b><p><%= mail_to @employee.email, @employee.email  %></p><br /></li>
    <li><b>Since: </b><p><%=raw @employee.since %></p><br /></li>	  
</ul>
</section>
</div>

<div id="body_content_right_team">
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="teams">
      <% @employees.each do |employee| %>
        <li>
          <%= link_to employee.name, employee_path(employee) %>
        </li>
      <% end %>
    </ul>
  </aside>
</div>

