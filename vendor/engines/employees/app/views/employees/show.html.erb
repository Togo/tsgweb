<section id="body_content">
<div id="body_content_left_engines_show">
	<h1><%= @employee.name %></h1>
	
	<section class="photo">
      <%= image_fu @employee.photo, :large %>
  </section>

 <section class="data">
  <ul>
    <li><b>Name: </b><%=raw @employee.name %><br /></li>
    <li><b>Funktion: </b><%=raw @employee.function %><br /></li>
	  <li><b>Telefon: </b><%=raw @employee.phone %><br /></li>
	  <li><b>Email: </b><%= mail_to @employee.email, @employee.email  %><br /></li>
    <li><b>Since: </b><%=raw @employee.since %><br /></li>	  
</ul>
</section>
</div>

<div id="body_content_right_engines_show">
  <aside>
    <h2>Weitere Vorst√§nde</h2>
    <ul id="teams">
      <% @employees.each do |employee| %>
        <li>
          <%= link_to employee.name, employee_path(employee) %>
        </li>
      <% end %>
    </ul>
  </aside>
</div>
</section>

